@import "../../components/style/style.styl"

.search-box {
  position: relative
  height 1.6rem
  width 17.2rem
  background: #E5E5E5;
  border-radius: .2rem;
  .search-icon, .search-del-icon {
    position: absolute
    top: .4rem
    display inline-block
    width .8rem
    height .8rem
    background: url("data:image/png;base64,") no-repeat;
    $prefix(background-size, contain);
  }
  .search-icon {
    left .6rem
  }
  .search-del-icon {
    display: none
    background-image: url("data:image/png;base64,")
    right: .5rem
  }
  .search-input {
    border: none;
    background: transparent;
    padding-left 1.9rem
    height 100%
    width 100%
    font-size .75rem;
    color: #959595;
  }
  &.focus {
    width 16rem
    .search-input {
      padding-left .6rem
      padding-right 1.5rem
    }
    .search-icon {
      display: none;
    }
    .search-del-icon {
      display inline-block
    }
  }
}

.region-header {
  .region-search {
    height 2.2rem
    padding-top: .3rem;
    padding-left: .8rem;
    position: relative
    
    &.focus {
      .search-btn {
        display: block
      }
    }
  }
  .cur-region {
    padding-left .8rem
    height 2.2rem
    line-height 2.2rem
    font-size: .8rem;
    color: #353535;
    border-top 1px solid #e5e5e5
  }
  .search-btn {
    display: none
    position: absolute
    top: .7rem
    right: .7rem;
    width .8rem
    height .8rem
    background: url("data:image/png;base64,") no-repeat;
    $prefix(background-size, contain);
  }
}

.m-hot-city {
  padding 1.3rem .8rem;
  .city-title {
    font-size: .8rem;
    color: #353535;
    margin-bottom .2rem
  }
  .city-group {
    overflow: hidden;
    margin-left -.4rem
    .city-item {
      float left
      width 5.45rem
      height 1.6rem
      line-height 1.6rem
      text-align center
      background-color: #fff;
      border-radius 0.2rem
      font-size: .7rem;
      color: #656565;
      margin-left: 0.4rem;
      margin-top: 0.4rem;
    }
  }
}