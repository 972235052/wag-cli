@import "../../../../components/style/style.styl"
body{
	background: #F5F5F5;
}
::-webkit-input-placeholder{color:#C5C5C5;} 
.mod-result-container{
	.icon-operate{
		background: url(//img.wuage.com/14792908479726icon-operate.png) no-repeat;
		background-size: 2.0rem;
	}
	.icon-tips{
		background: url(//img.wuage.com/14792908479726icon-tips.png) no-repeat;
		background-size: 3.0rem;		
	}	
	.inner{
		width: 17.55rem;
		margin: 0 auto;
		background: #fff;
	}
	.mod-success{
		width: 18.75rem;
		margin: 0 auto;
		background: #fff;
		overflow: hidden;
		margin-top: 0.6rem;
		text-align: center;
		.icon-success{
			width: 2.4rem;
			height: 2.4rem;
			margin-top: 1.6rem;
			margin-left: auto;
			margin-right: auto;
			background-position:0 0;
		}
		.main-text{
			margin-top: 0.6rem;
			font-size: 0.8rem;
			color: #555;
		}
		.sub-text{
			margin-top: 1.2rem;
			color: #959595;
			font-size: 0.6rem;
			margin-bottom: 0.8rem;
		}
	}	
	.mod-recommend{
		width: 18.75rem;
		margin: 0 auto;		
		margin-top: 0.6rem;
		background: #fff;
		.block-title{
			overflow: hidden;
			border-bottom: 1px solid #F2F2F2; 
			h1{
				float: left;
				font-size: 0.8rem;
				color: #353535;
				height: 2.65rem;
				line-height: 2.65rem;
				padding-left: 0.8rem;
			}
			.view-more{
				float: right;
				font-size: 0.65rem;
				color: #656565;
				height: 2.65rem;
				line-height: 2.65rem;
				padding-right: 0.8rem;
			}
		}
		ul{
			background: #fff;
			li{
				border-bottom: 1px solid #F2F2F2;
				padding: 0.8rem 0;
				overflow: hidden;
				.left-img{
					float: left;
					img{
						width: 5.0rem;
						height: 5.0rem;
					}
				}
				.right-text{
					position: relative;
					float: left;
					width: 11.5rem;
					height: 5rem;
					overflow: hidden;
					margin-left: 0.625rem;
					.title{
						font-size: 0.75rem;
						color: #656565;
						line-height: 1.05rem;
						height: 2.1rem;
						overflow: hidden;
						margin-bottom: 0.4rem;
					}
					.location{
						font-size: 0.6rem;
						color: #959595;
						margin-bottom: 0.2rem;
						.icon-location{
							display: inline-block;
							width: 0.6rem;
							height: 0.75rem;
							background-position: 0 -3.0rem;
							margin-right: 0.4rem;
							position: relative;
							top: 0.1rem;
						}
					}
					.company{
						font-size: 0.6rem;
						color: #959595;
						line-height: 1.15rem;
						width: 10.0rem;
						height: 1.15rem;
						margin-top: 0.5rem;
						.icon-call{
							position: absolute;
							right: 0;
							bottom: 0;
							width: 1.175rem;
							height: 1.15rem;
							background-position: 0 0; 
						}
					}
				}	
				&:last-child{
					border-bottom: none;
				}			
			}
		}

	}
}