@import "../base/mixin/fn.styl"
.toast-container {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  display table
  $prefix(transition, opacity .8s);
  opacity: 0;
  &.active {
    opacity: 1;
  }
  .toast-wrapper {
    display table-cell
    vertical-align middle
    text-align center
  }
