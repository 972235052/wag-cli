@import "~style-mui"

$text-base = #353535
$text-light = #656565

body {
  background #f5f5f5 linear-gradient(#a0d2fc, #f5f5f5) no-repeat
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none !important;
}

input {
  border none
  outline none
  padding-left .24rem
}

.hub-body {
  padding 2.224rem .24rem 0
  background url(//img.wuage.com/public/149189318444041789275_784_366.png) no-repeat center .2rem
  background-size 3.92rem 1.8214rem

  .hub-form {
    padding .4rem .4rem 0.24rem
    box-shadow 0 .04rem .16rem rgba(53, 53, 53, 10%)
    border-radius 0.08rem
    background #ffffff
    color $text-light
    font-size .3rem
  }

  .hub-desc {
    textarea {
      width 100%
      height 2.94rem
      font-size .3rem
    }
    .desc-len {
      font-family $font-family-monospace
    }
  }

  .form-hr {
    box-sizing border-box
    margin 0
    border-color #e1e1e1
  }

  .hub-mobile {
    display flex
    align-items center
    height 1.12rem
    input {
      width 100%
    }
  }

  .hub-code {
    height .88rem
    border-radius .08rem
    background #f5f5f5
    input {
      width 100%
      background transparent
      border none
    }

    .code-btn {
      width 2.42rem
      color #c5c5c5
      font-size .24rem
      &.active {
        color $web-color-base
      }
      span {
        font-family $font-family-monospace
      }
    }
  }

  .hub-code,
  .hub-mobile {
    + .err-pannel {
      height 0.62rem
      line-height 0.62rem
      padding-left .24rem
    }
  }

  .btn-submit {
    height .88rem
    margin-top .24rem
    border-radius .08rem
    box-shadow 0 0.08rem 0.16rem rgba(53, 53, 53, 16%)
    background $web-color-base
    color #ffffff
    font-size .34rem
    outline none
    $user-select(none)

    &.tap-active {
      -webkit-tap-highlight-color: rgba(53, 53, 53, 0.2);
    }
  }
}

.textarea-clean {
  border none
  outline none
  resize none
}

.text-right {
  text-align right
}

.err-pannel {
  margin-bottom 0.08rem
  font-size .24rem
  color #ff7300
}
